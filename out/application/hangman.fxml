<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.HangmanController">

   <children>
      <!-- Score / Round -->
      <Label layoutX="14" layoutY="14" text="Score:">
         <font><Font name="System Bold" size="17" /></font>
      </Label>
      <Label fx:id="score" layoutX="80" layoutY="14" style="-fx-font-size:17;" text="0" />

      <Label layoutX="14" layoutY="48" text="Rounds:">
         <font><Font name="System Bold" size="17" /></font>
      </Label>
      <Label fx:id="rounds" layoutX="100" layoutY="48" style="-fx-font-size:17;" text="1" />

      <!-- Timer -->
      <Circle fx:id="timerArea" fill="dodgerblue" layoutX="750" layoutY="40" radius="29" stroke="black" />
      <Label fx:id="times" layoutX="735" layoutY="25" style="-fx-font-size:22; -fx-font-weight:bold;" text="60" />

      <!-- Hangman Structure -->
      <Line endX="100" layoutX="144.0" layoutY="352.0" startX="-100" /> <!-- base -->
      <Line endY="51.5" layoutX="144" layoutY="300" startY="-200" /> <!-- pole -->
      <Line endX="150" layoutX="144" layoutY="100" startX="0" /> <!-- top -->
      <Line endX="3.0517578125E-5" endY="48.5" layoutX="294" layoutY="100" startY="0" /> <!-- rope -->

      <!-- Body parts (hidden at start) -->
      <Circle fx:id="head" fill="transparent" layoutX="294" layoutY="175.0" radius="26.0" stroke="black" visible="false" />
      <Line fx:id="body" endY="70" layoutX="294" layoutY="190" startX="-0.707122802734375" startY="9.292892456054688" visible="false" />
      <Line fx:id="leftHand" endX="-50" endY="50" layoutX="294" layoutY="200" startX="0" startY="0" visible="false" />
      <Line fx:id="rightHand" endX="50" endY="50" layoutX="294" layoutY="200" startX="0" startY="0" visible="false" />
      <Line fx:id="leftFoot" endX="-50" endY="50" layoutX="294" layoutY="260" startX="0" startY="0" visible="false" />
      <Line fx:id="rightFoot" endX="50" endY="50" layoutX="294" layoutY="260" startX="0" startY="0" visible="false" />

      <!-- Word Display -->
      <Label fx:id="wordDisplay" layoutX="368.0" layoutY="172.0" prefHeight="101.0" prefWidth="411.0" style="-fx-font-size:26; -fx-font-weight:bold; -fx-alignment:center;" text="_ _ _ _ _" />

      <!-- Letter Buttons -->
      <GridPane fx:id="letterGrid" hgap="5" layoutX="150" layoutY="450" vgap="5" />
      
      <!-- Restart -->
      <Button fx:id="startOver" layoutX="680" layoutY="500" text="Start Over" />
      <Line endX="33.33332824707031" endY="41.5" layoutX="154.0" layoutY="310.0" startX="-9.500015258789062" startY="2.0" />
      <Line endX="-49.33332061767578" endY="41.5" layoutX="154.0" layoutY="310.0" startX="-10.207138061523438" startY="1.292877197265625" />
      <Line endX="-9.500015258789062" endY="-176.0" layoutX="154.0" layoutY="310.0" startX="29.333328247070312" startY="-209.5" />
   </children>
</AnchorPane>
